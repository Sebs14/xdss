        app:layout_constraintStart_toStartOf="@+id/app_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/app_name_text_view"
        tools:text="SebastiÃ¡n Flores" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="0dp"
